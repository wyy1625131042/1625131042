<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:rowCount="6"
    android:columnCount="3"
    android:id="@+id/root"
    >

    <Button
        android:id="@+id/six_one"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="1"/>

    <Button
        android:id="@+id/six_two"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="2"/>

    <Button
        android:id="@+id/six_thr"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:text="3"/>

    <Button
        android:id="@+id/six_four"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="4"/>

    <Button
        android:id="@+id/six_five"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="5"/>

    <Button
        android:id="@+id/six_six"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:text="6"/>

    <Button
        android:id="@+id/six_seven"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="7"/>

    <Button
        android:id="@+id/six_eight"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="8"/>

    <Button
        android:id="@+id/six_nine"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="2"
        android:text="9"/>

    <Button
        android:id="@+id/six_ten"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="0"/>

    <Button
        android:id="@+id/six_eleven"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="+"/>


    <Button
        android:id="@+id/six_twe"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="3"
        android:text="."/>


    <Button
        android:id="@+id/six_tht"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:text="*"/>

    <Button
        android:id="@+id/six_fourteen"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="/"/>


    <Button
        android:id="@+id/six_fifteen"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="4"
        android:text="="/>


    <Button
        android:id="@+id/six_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:layout_row="5"
        android:text="Back" />

</GridLayout>