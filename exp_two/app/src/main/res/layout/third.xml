<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/thr_back"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_alignParentBottom="true"
            />

        <Button
            android:id="@+id/thr_one"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/thr_thr"
            android:layout_alignLeft="@id/thr_two"
            android:layout_alignParentLeft="true"
            android:text="第一个Button" />

        <Button
            android:id="@+id/thr_two"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/thr_four"
            android:layout_alignParentRight="true"
            android:text="第二个Button"

            />

        <Button
            android:id="@+id/thr_thr"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/thr_four"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="第三个Button" />

        <Button
            android:id="@+id/thr_four"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="第四个Button" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>